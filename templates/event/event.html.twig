{% extends 'base.html.twig' %}

{% block title %}Calendrier des évènements{% endblock %}

{% block body %}
    <div class="container bg-info text-center overflow-auto rounded-5 mt-3"  style="max-width: 90%;">
        <img class="img-fluid my-4 mx-auto d-block" style="width: 100%;" src="/images/{{ sport.image ?? 'default.jpg' }}" alt="{{ sport.name }}">
    </div>

    <div class="container bg-info text-center rounded-5 mt-2" style="max-width: 90%; max-height: 100%;">
        <h3 class="text-center text-danger mb-3">{{ sport.name }} : calendrier des épreuves</h3>

        <div class="row justify-content-start">
            {% for event in events %}            
                {% set i = loop.index0 %}
                <div class="col-6 col-sm-6 col-md-4 col-lg-2">
                    <div class="card m-2 p-2 h-300">
                        <div class="card-header">
                            <h5>{{ event.title }}</h5>
                        </div>
                        <div class="card-body mb-1 p-2 text-center">
                            
                            <div class="accordion mx-auto text-start" id="accordion{{ i }}">
                                <div class="accordion-item">
                                    <h2 class="accordion-header" id="heading{{ i }}">
                                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse{{ i }}" aria-expanded="false" aria-controls="collapse{{ i }}">
                                            <strong>{{ event.location ~ '...' }}</strong>
                                        </button>
                                    </h2>
                                    <div id="collapse{{ i }}" class="accordion-collapse collapse" aria-labelledby="heading{{ i }}" data-bs-parent="#accordion{{ i }}">
                                        <div class="accordion-body">
                                            {% for programm in event.programEvent %}
                                                <p><strong>.</strong> {{ programm }}</p>
                                            {% endfor %}
                                        </div>
                                    </div>
                                </div>
                                
                            </div>
                            {# <a href="{{ path('app_eventById', {id: event.id}) }}" class="mt-2 btn btn-md btn-secondary" style="width: 100%">Réserver</a> #}
                            <a href="{{ path('app_add_booking', {event_id: event.id}) }}" class="mt-2 btn btn-md btn-secondary" style="width: 100%">Réserver</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

        
        <div id="exempleCarrousel" class="carousel carousel-dark slide pointer-event d-none d-md-block bg-info mt-1 mb-2 rounded-5" data-bs-ride="carousel">

            <div class="carousel-inner">
                {% set firstItem = true %}
                {% for game in games %}
                    {% if firstItem == true %}
                        {% set firstItem = false %}
                        <div class="carousel-item active" data-bs-interval="3000">
                    {% else %}
                        <div class="carousel-item" data-bs-interval="3000">
                    {% endif %}
                    <div class="text-center" style="max-height: 400px;">
                        <img class="img-fluid mt-3 mb-4 mx-auto d-block" style="width: 80%;" src="images/{{ game.image }}" alt="{{ game.title }}">
                        <div class="mt-1 mb-1">
                            <p class="text-center">{{ game.title }}</p>
                            <p> {{ game.description|slice(0, 200) ~ '...' }} </p>
                        </div>
                        <div class="mt-2 text-center mx-auto" style="width: 80%; height: 200px;">
                          {#  <p> {{ game.description|slice(0, 200) ~ '...' }} </p> #}
                            <button type="button" class="btn btn-outline-dark btn-lg mb-2" data-bs-toggle="modal" data-bs-target="#gamesHistory">En savoir plus...</button>
                        </div>
                    </div>
                </div>
                {% endfor %}

            </div>

            <button class="carousel-control-prev" type="button" data-bs-target="#exempleCarrousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#exempleCarrousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>

        </div>



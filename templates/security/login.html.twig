{% extends 'base.html.twig' %}

{% block title %}Site des JO Paris-2024{% endblock %}

{% block body %}
    
    <div class="container w-25 border rounded bg-light-subtle mt-5 p-2" style="height: 45vh;">
        
        {% for message in app.flashes('success') %}
            <div class="alert alert-success mt-4">
                {{ message }}
            </div>
        {% endfor %}
    

        <form action = "{{path('app_login')}}" method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Vous êtes connecté {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <h1 class="h3 mt-4 mb-3 font-weight-normal text-center">Identifiez-vous</h1>
            <label for="username">Email *</label>
            <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control mt-2 mb-4" autocomplete="email" required autofocus>
            <label for="password">Mot de passe *</label>
            <input type="password" name="_password" id="password" class="form-control mt-2" autocomplete="current-password" required>
            <label class="text-danger mt-5">* Ces champs sont obligatoires</label>
            <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

            <button class="btn btn-outline-dark col-12 mx-auto mt-4 mb-4" type="submit">
                Se connecter
            </button>
        </form>
    </div>
{% endblock %}
